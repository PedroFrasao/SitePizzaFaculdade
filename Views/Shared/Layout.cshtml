<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pizzaria Delícia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
        }

        .jumbotron {
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/pizza-banner.jpg');
            background-size: cover;
            color: white;
            padding: 100px 0;
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container">
            @Html.ActionLink("Pizzaria Delícia", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="navbar-nav">
                @Html.ActionLink("Início", "Index", "Home", null, new { @class = "nav-link" })
                @Html.ActionLink("Cardápio", "Cardapio", "Home", null, new { @class = "nav-link" })
                @Html.ActionLink("Carrinho", "Carrinho", "Home", null, new { @class = "nav-link" })
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Pizzaria Delícia - Projeto Faculdade</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>