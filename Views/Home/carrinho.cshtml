@model List<Pizza>
@{
    ViewBag.Title = "Carrinho";
    decimal total = Model.Sum(p => p.Preco);
}

<h2>Seu Carrinho</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p>Seu carrinho está vazio.</p>
        <a href="@Url.Action("Cardapio")" class="btn btn-primary">Ver Cardápio</a>
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Pizza</th>
                <th>Descrição</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pizza in Model)
            {
                <tr>
                    <td>@pizza.Nome</td>
                    <td>@pizza.Descricao</td>
                    <td>R$ @pizza.Preco.ToString("F2")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2"><strong>Total</strong></td>
                <td><strong>R$ @total.ToString("F2")</strong></td>
            </tr>
        </tfoot>
    </table>

    <div class="row mt-4">
        <div class="col-md-6">
            @using (Html.BeginForm("FinalizarPedido", "Home"))
            {
                <h4>Dados para Entrega</h4>
                <div class="form-group">
                    <label for="nomeCliente">Nome:</label>
                    <input type="text" class="form-control" name="nomeCliente" required>
                </div>
                <div class="form-group">
                    <label for="endereco">Endereço:</label>
                    <textarea class="form-control" name="endereco" required></textarea>
                </div>
                <div class="form-group">
                    <label for="telefone">Telefone:</label>
                    <input type="text" class="form-control" name="telefone" required>
                </div>

                <h4 class="mt-4">Pagamento via PIX</h4>
                <div class="alert alert-info">
                    <p><strong>Chave PIX:</strong> 05117006100</p>
                    <p>Envie o comprovante para o WhatsApp: (11) 99999-9999</p>
                </div>

                <button type="submit" class="btn btn-success btn-lg">Finalizar Pedido</button>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Cardapio")" class="btn btn-primary">Continuar Comprando</a>
        <a href="@Url.Action("LimparCarrinho")" class="btn btn-danger">Limpar Carrinho</a>
    </div>
}